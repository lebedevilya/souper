<div class="group relative block">
  <div class="relative h-[350px] sm:h-[450px]">
    <%= image_tag item.image.variant(resize_to_limit: [700, 700], saver: { strip: true, compression: 9 }), class: "absolute inset-0 h-full w-full object-cover"%>
  </div>

  <div class="absolute inset-0 flex flex-col items-start justify-end p-6">
    <div class="block relative rounded px-5 py-3">
      <div class="absolute inset-0 bg-black opacity-50 rounded"></div> <!-- Semi-transparent background -->
      <h3 class="text-xl font-medium text-white relative z-10"> <!-- Higher z-index to keep text on top -->
        <%= item.name %>
      </h3>
      <p class="font-medium text-white relative z-10"> <!-- Higher z-index to keep text on top -->
        <%= number_to_currency(item.price, unit: item.category.restaurant.currency, format: "%u %n") %>
      </p>
      
      <p class="mt-1.5 max-w-[40ch] text-xs text-white relative z-10"> <!-- Higher z-index to keep text on top -->
        <%= item.description %>
      </p>
    </div>

    <% if @order.present? %>
      <span class="mt-3 inline-block bg-black px-10 py-3 text-xs font-medium uppercase tracking-wide text-white">
        Add
      </span>
    <% end %>
  </div>
</div>

